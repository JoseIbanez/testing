zone "grupofibratel.com." {
    type forward;
    forward only;
    forwarders { 10.10.10.10; 10.10.10.11; };
};


zone "fibratel.com." {
    type forward;
    forward only;
    forwarders { 10.10.10.10; 10.10.10.11; };
};



zone "fibra." {
        type slave;
        file "/var/lib/bind/db.fibra";
        allow-transfer {any;};
        masters { 10.19.4.10; 10.19.4.11; };        
};


zone "lab.fibra." {
        type slave;
        file "/var/lib/bind/db.lab.fibra";
        allow-transfer {any;};
        masters { 10.19.4.10; 10.19.4.11; };
};


